<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.backendStudy.cat.mapper.CommentMapper">

    <!-- comment 테이블 전체 컬럼 -->
    <sql id="commentColumns">
        comment_idx,
        user_idx,
        board_idx,
        answer_idx,
        comment_content,
        date,
        update_time
    </sql>

    <!-- 댓글 개수 -->
    <select id="selectCountComment" resultType="long">
        SELECT
            COUNT(*)
        FROM comment
    </select>

    <!-- 댓글 정보 저장 -->
    <insert id="insertComment" parameterType="DTOComment">
        INSERT INTO comment (<include refid="commentColumns"/>)
        VALUES (
        #{commentIdx},
        #{userIdx},
        #{boardIdx},
        #{answerIdx},
        #{commentContent},
        NOW(),
        NULL
        )
    </insert>

    <!-- 댓글 인덱스 조회 -->
    <select id="selectCommentIdx" parameterType="long" resultType="DTOComment">
        SELECT *
        FROM comment
        WHERE comment_idx = #{commentIdx}
    </select>
    
    <select id="getAllComment">
        <!-- TODO 글쓴이, 질문글 or 답변글 구분 쿼리문 추가 -->

    </select>

    <!-- 댓글 수정 -->
    <update id="updateComment" parameterType="DTOComment">
        UPDATE comment
        SET
            user_idx = #{userIdx},
            comment_content = #{commentContent},
            update = NOW()
        WHERE comment_idx = #{commentIdx}
    </update>

    <!-- 댓글 삭제 -->
    <delete id ="deleteComment" parameterType="long">
        DELETE FROM comment
        WHERE comment_idx = #{commentIdx}
    </delete>

</mapper>
